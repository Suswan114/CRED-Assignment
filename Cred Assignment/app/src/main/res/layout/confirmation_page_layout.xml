<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#2B58AB"
    android:background="@xml/top_cornered"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/first_line_confirmation_page"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="your money has beem credited to your bank account"
        android:layout_margin="25dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/first_line_confirmation_page"
        app:layout_constraintStart_toStartOf="@id/first_line_confirmation_page"
        android:id="@+id/second_line_confirmation_page"
        android:textSize="14dp"
        android:textColor="#7AFFFFFF"
        android:text="thank you for choosing us!! your EMI will be deducted from your bank account starting from next month. Contact us for any further assistance"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="25dp" />
    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/second_line_confirmation_page"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/confirmation" />


</androidx.constraintlayout.widget.ConstraintLayout>